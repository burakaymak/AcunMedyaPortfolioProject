@model List <AcunMedyaProje1.Models.TBL_Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Testimonial Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TestimonialID</th>
                <th>Description1</th>
                <th>TestimonialName</th>
                <th>Description2</th>
                <th>ImageURL</th>
                <th>Title</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Description1</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageURL" style="width : 50px;" /> </td>
                    <td>@item.Title</td>

                    <td><a href="/Testominial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testominial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                </tr>

            }
        </tbody>
    </table>
    <a href="/Testominial/CreateTestimonial/" class="btn btn-success">Oluştur</a>
</div>

